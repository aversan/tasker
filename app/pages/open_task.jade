extends /blocks/layout-default/layout-default

block head
	- var pageTitle = 'New project';
	- var pageDescription = '';
	- var pageKeywords = '';

block page
	- var pageClasses = ['page--layout-left-right', 'is-visible-right']

block content
	.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
		include ../blocks/page/page__header.jade
		aside.mdl-layout__drawer.mdl-layout__drawer--left
			include ../blocks/page/page__sidebar-list.jade
		.mdl-layout__content
		.mdl-layout__drawer.mdl-layout__drawer--right
			.page__drawer-header
				button.uk-close.page__drawer-close
				.page__drawer-header-action
					button.mdl-button.mdl-js-button.mdl-button--icon.mdl-button--contrast-muted.mdl-js-ripple-effect
						i.mdi.mdi-pencil
					button.mdl-button.mdl-js-button.mdl-button--icon.mdl-button--contrast-muted.mdl-js-ripple-effect
						i.mdi.mdi-delete
				.page__drawer-container
					h5 Call in barber shop
			.page__drawer-container
				include ../blocks/page/page__open-task.jade
	button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored.page__floating-button.mdl-js-ripple-effect.hidden
		i.mdi.mdi-check
